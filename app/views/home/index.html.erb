    <!-- Site Navigation Bar -->
    <%=render("shared/navbar")%>

    <div class="main_container container-fluid">
      <div class="top_container">
        <!-- Profile Image and Short Description -->
        <div class="row">
          <div class="col col-md-4">
            <div class="profile_container">
              <div>
                <%=image_tag("profile_image.jpg", alt: "Yesu Carter", class: "img-fluid max-width")%>
              </div>
                <div class="profile_description"> Associate Consultant at Sogeti USA '19 Alumni Colgate University </div>
                <div class="profile_contact"> Atlanta, GA </div>
                <div class="profile_contact">
                  yesucarter@gmail.com
                </div>
            </div>
          </div>

          <!-- Current Projects and More Information -->
          <div class="col col-md-8">

            <div class="info_container">
              <h3 class="header">About</h3>

                <div class="flex">
                  <div class="flex_container">
                    <div class="info">
                      <div class="description_header"> Interests </div>

                      <div class="description">
                        Web Application and Software Development with a focus on fast and seamless performance.
                      </div>
                    </div>

                    <div class="info">
                      <div class="description_header"> Skills </div>

                      <div class="description">
                        Java, Python, Ruby, HTML, CSS, JavaScript, JQuery
                      </div>
                      <div class="description">
                        Ruby on Rails, Node JS, AngularJS
                      </div>
                    </div>
                  </div>

                  <div class="flex_container">
                    <div class="info">
                    <div class="description_header"> Current Project </div>
                      <div class="description"> Building this personal website using the Ruby On Rails Framework! </div>
                    </div>

                    <div class="info">
                      <div class="description_header"> Recent Projects </div>
                      <button class="set btn btn-link moreBtn" type="button" onclick="show_more()">
                        Couch Gaming
                      </button>
                        <div class="description more">
                          Working on a barebones videogame marketplace with a focus on flexibility between mobile and large screen layouts
                        </div>
